#!/usr/bin/env bash
# Installs and configures Nginx to serve 'Holberton School' on port 80

# Update package list and install nginx
apt-get update -y
apt-get install -y nginx

# Make sure Nginx is started
service nginx start

# Overwrite the default index page served by Nginx
echo "Holberton School" | tee /var/www/html/index.nginx-debian.html > /dev/null

# Restart Nginx (without systemctl)
service nginx restart

